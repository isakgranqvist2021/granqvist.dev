<% if(repositories) { %>
<section id="projects" class="bg-light" tabindex="4">
  <div class="container">
    <h2>Recent Projects</h2>

    <div class="swiper">
      <div class="swiper-wrapper">
        <% repositories.forEach(repository => { %>
        <a
          class="swiper-slide grid-item"
          title="View repository"
          href="<%= repository.homepage || repository.html_url %>"
          role="gridcell"
          target="_blank"
        >
          <img
            class="media"
            alt="<%= repository.name %>"
            src="/public/images/svg/<%= repository.language %>.svg"
          />

          <div class="grid-item-body">
            <h4><%= repository.name %></h4>
            <p><%= repository.description %></p>
            <small>Last updated: <%= repository.pushed_at %></small>
          </div>
        </a>
        <% }) %>
      </div>

      <div class="swiper-pagination"></div>

      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</section>
<% } %>
